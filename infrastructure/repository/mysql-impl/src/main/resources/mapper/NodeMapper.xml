<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.infrastructure.repository.mysql.mapper.NodeMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.demo.infrastructure.repository.mysql.po.NodePO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="properties" property="properties" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="deleted" property="deleted" jdbcType="TINYINT"/>
        <result column="version" property="version" jdbcType="INTEGER"/>
    </resultMap>
    
    <!-- 根据节点名称查询节点 -->
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT id, name, type, description, properties, 
               create_time, update_time, create_by, update_by, 
               deleted, version
        FROM t_node
        WHERE name = #{name}
        AND deleted = 0
    </select>
    
    <!-- 根据节点类型查询节点列表 -->
    <select id="selectByType" resultMap="BaseResultMap">
        SELECT id, name, type, description, properties, 
               create_time, update_time, create_by, update_by, 
               deleted, version
        FROM t_node
        WHERE type = #{type}
        AND deleted = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据条件分页查询节点 -->
    <select id="selectPageByCondition" resultMap="BaseResultMap">
        SELECT id, name, type, description, properties, 
               create_time, update_time, create_by, update_by, 
               deleted, version
        FROM t_node
        WHERE deleted = 0
        <if test="name != null and name != ''">
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        ORDER BY create_time DESC
    </select>
    
</mapper>
